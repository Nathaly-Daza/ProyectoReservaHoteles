<script>
        $(document).ready(function() {
            $('#destino').on('input', function() {
                const query = $(this).val();
                if (query.length > 2) {
                    $.get('/autocomplete', { q: query }, function(data) {
                        $('#autocomplete-results').empty();
                        data.forEach(function(item) {
                            $('#autocomplete-results').append(`<a href="#" class="list-group-item list-group-item-action">${item}</a>`);
                        });
                    });
                }
            });

            $('#autocomplete-results').on('click', 'a', function(e) {
                e.preventDefault();
                $('#destino').val($(this).text());
                $('#autocomplete-results').empty();
            });

            $('#searchForm').on('submit', function(e) {
                e.preventDefault();
                const destino = $('#destino').val();
                $.get('/search', { destino: destino }, function(data) {
                    $('#hotels-list').empty();
                    if (data.length > 0) {
                        data.forEach(function(hotel) {
                            $('#hotels-list').append(`<div class="card mb-3"><div class="card-body"><h5 class="card-title">${hotel.name}</h5><p class="card-text">${hotel.address}</p></div></div>`);
                        });
                    } else {
                        $('#hotels-list').html('<p>No se encontraron hoteles.</p>');
                    }
                });
            });
        });
</script>