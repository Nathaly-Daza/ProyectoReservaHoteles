<main class="container">
    <title>Crear Sesión</title>
    <div class="container">
        <h2>Crear cuenta</h2>
        <form action="/crearSesion" method="post">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <div class="input-container">
                    <input type="text" id="nombre" name="nombre">
                    <i class="fa-solid fa-user input-icon"></i>
                </div>
            </div>
 
            <div class="form-group">
                <label for="ciudad">Ciudad:</label>
                <div class="input-container">
                    <input type="text" id="ciudad" name="ciudad">
                    <i class="fa-solid fa-house input-icon"></i>
                </div>
            </div>
 
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <div class="input-container">
                    <input type="text" id="telefono" name="telefono">
                    <i class="fa-solid fa-phone input-icon"></i>
                </div>
            </div>
 
            <div class="form-group">
                <label for="direccion">Dirección:</label>
                <div class="input-container">
                    <input type="text" id="direccion" name="direccion">
                    <i class="fa-solid fa-map-pin input-icon"></i>
                </div>
            </div>
 
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <div class="input-container">
                    <input type="text" id="email" name="email">
                    <i class="fa-regular fa-envelope input-icon" ></i>
                </div>
            </div>
 
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <div class="input-container">
                    <input type="password" id="password" name="password">
                    <i class="fa-solid fa-key input-icon"></i>
                </div>
            </div>
 
            <div class="checkbox-container">
                <input type="checkbox" id="terminos">
                <label for="terminos" class="info">Acepta tratamiento de datos personales para completar su registro.</label>
            </div>
            <input type="submit" value="Crear Cuenta" class="submit-btn">
        </form>
    </div>
</main>
 
